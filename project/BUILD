        "NRF52832_XXAA",
        "NRF52_PAN_74",
        "__HEAP_SIZE=8192",
        "__STACK_SIZE=8192",
    ],
    deps = [
        ":config/linker.ld",
        "//sdk:config",
        "@nrf_sdk//:hdrs",
    ],
)

genrule(
    name = "bin",
    srcs = [":project"],
    outs = ["project.bin"],
    cmd = "$(execpath @arm_none_eabi//:objcopy) -O binary $< $@",
    tools = ["@arm_none_eabi//:objcopy"],
)

genrule(
    name = "hex",
    srcs = [":project"],
    outs = ["project.hex"],
    cmd = "$(execpath @arm_none_eabi//:objcopy) -O ihex $< $@",
    tools = ["@arm_none_eabi//:objcopy"],
)
