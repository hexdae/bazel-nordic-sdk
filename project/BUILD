# project/BUILD.bazel

load("@rules_cc//cc:defs.bzl", "cc_binary")

cc_binary(
    name = "project",
    srcs = [
        "source/main.c",
        "@nrf_sdk//:components/boards/boards.c",
        "@nrf_sdk//:components/drivers_nrf/nrf_soc_nosd/nrf_nvic.c",
